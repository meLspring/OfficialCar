<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/infor_platform_detail_item_isTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/infor_platform_detail_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="这是一段来自未来你的语言，请把握住"
                android:layout_marginLeft="20dp"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infor_platform_detail_item_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="作者"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/infor_platform_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(yyyy-MM-dd hh:mm)"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/infor_platform_detail_item_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <widget.MyGridView
                android:id="@+id/infor_platform_detail_item_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="10dp"
                android:visibility="gone"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/infor_platform_detail_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是内容"
                android:textSize="15sp"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c6b8b8"/>
</LinearLayout>