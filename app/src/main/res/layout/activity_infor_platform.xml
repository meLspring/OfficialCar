<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yysh.officialcar.InforPlatformActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee">
        <ImageView
            android:id="@+id/infor_platform_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@mipmap/left"
            android:onClick="inforBack"
            android:clickable="true"/>
        <TextView
            android:id="@+id/infor_platform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息平台"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/infor_platform_addImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher_round"
            android:onClick="inforAdd"
            android:clickable="true"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/infor_platform_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/info_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
