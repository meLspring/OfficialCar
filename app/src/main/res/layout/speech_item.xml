<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp" >

    <LinearLayout
        android:id="@+id/recorder_length"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/chatto_bg_focused"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/id_recorder_anim"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:background="@mipmap/speech_start"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:text=""
        android:textColor="#ff777777"
        android:layout_toRightOf="@id/recorder_length"/>

</RelativeLayout>